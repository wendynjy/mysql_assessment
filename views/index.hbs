{{#extends "main"}}
{{#block "body"}}
        <h1 class="text-center">Bookshelf</h1>
        <!-- Search bar -->
        <form action="/books" method="get" class="mb-3">
            <div class="input-group">
                <input type="text" name="search" class="form-control" placeholder="Search...">
                <div class="input-group-append">
                    <button type="submit" class="btn btn-primary">Search</button>
                </div>
            </div>
        </form>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Genre</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {{#each books}}
                <tr>
                    <td>{{this.title}}</td>
                    <td>{{this.author_name}}</td>
                    <td>{{this.genre_name}}</td>
                    <td>
                        <a href="/books/{{this.book_id}}/edit" class="btn btn-primary">Edit</a>
                        <a href="/books/{{this.book_id}}/delete" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
{{/block}}
{{/extends}}

